{
  "name": "context-kiln",
  "version": "1.0.0",
  "description": "Electron + React Desktop App",
  "main": "src/main.js",
  "dependencies": {
    "@ant-design/icons": "^6.1.0",
    "@anthropic-ai/sdk": "^0.71.2",
    "@monaco-editor/react": "^4.7.0",
    "antd": "^6.1.4",
    "better-sqlite3": "^12.6.0",
    "diff": "^8.0.3",
    "electron-store": "^11.0.2",
    "minimatch": "^10.1.1",
    "node-llama-cpp": "^3.15.0",
    "openai": "^6.16.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^16.1.0",
    "tiktoken": "^1.0.22",
    "uuid": "^13.0.0",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@electron/rebuild": "^4.0.2",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "babel-jest": "^30.2.0",
    "babel-loader": "^10.0.0",
    "concurrently": "^9.2.1",
    "css-loader": "^7.1.2",
    "electron": "^27.0.0",
    "electron-builder": "^26.4.0",
    "electron-is-dev": "^3.0.1",
    "electron-rebuild": "^3.2.9",
    "html-webpack-plugin": "^5.6.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "monaco-editor-webpack-plugin": "^7.1.1",
    "playwright": "^1.57.0",
    "style-loader": "^4.0.0",
    "wait-on": "^7.2.0",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "scripts": {
    "start": "webpack serve --mode development",
    "build": "webpack --mode production",
    "dev": "concurrently \"npm start\" \"wait-on http://localhost:31337 && NODE_ENV=development electron .\"",
    "electron": "electron .",
    "test": "jest",
    "test:services": "jest --selectProjects services",
    "test:components": "jest --selectProjects components",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:all": "npm run build && electron-builder -mwl"
  },
  "build": {
    "appId": "com.contextkiln.app",
    "productName": "Context Kiln",
    "files": [
      "dist/**/*",
      "src/main.js",
      "src/preload.js",
      "src/services/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development",
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
